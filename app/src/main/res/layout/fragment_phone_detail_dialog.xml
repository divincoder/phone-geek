<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/activity_vertical_padding"
    tools:context=".fragment.PhoneDetailDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/expandedImageView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:src="@drawable/ic_arrow_downward_black_24dp"/>

        <TextView
            android:id="@+id/priceDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginBottom="@dimen/small_content_padding"
            android:paddingTop="@dimen/small_content_padding"
            tools:text="PRICE: #23000"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_view_regular_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"/>

            <TextView
                android:id="@+id/review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_padding"
                android:paddingBottom="@dimen/small_content_padding"
                android:lineSpacingExtra="5sp"
                android:textSize="@dimen/text_view_regular_size"
                android:textColor="@color/half_black"
                tools:text="Infinix Hot 6 is a beautifully crafted device with an ergonomic design. It has a touch of iPhone X at the back to make it appear similar to a flagship phone.

Visible at the top bezel is the notification LED, proximity sensor, call reception speaker, 5MP camera, and selfie flash all arranged horizontally. Nothing can be found on the bottom bezel, not even virtual buttons."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/specifications"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_medium_italic"
            android:layout_marginTop="@dimen/activity_vertical_padding"
            android:textSize="@dimen/text_view_medium_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/specificationsTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/small_content_padding"
            android:background="@color/opacity_white"
            android:fontFamily="@font/roboto_medium_italic"
            android:textColor="@color/half_black"
            android:textSize="@dimen/text_view_regular_size"
            android:textStyle="italic"
            tools:text="5.5 INCH GORILLA GLASS" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_padding"
            android:background="@drawable/transparent_button_background"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:text="@string/done"
            android:textSize="@dimen/text_view_regular_size" />

    </LinearLayout>
</ScrollView>