<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="100dp"
    android:layout_marginTop="@dimen/small_content_padding"
    android:layout_marginStart="@dimen/small_content_padding"
    android:layout_marginEnd="@dimen/small_content_padding"
    android:elevation="8dp"
    app:cardCornerRadius="5dp"
    tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_vertical_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/phone_image"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:src="@drawable/ic_arrow_downward_black_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/phone_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/text_view_medium_size"
                tools:text="Techno K7" />

            <TextView
                android:id="@+id/phone_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_view_regular_size"
                tools:text="# 20,000" />

            <TextView
                android:id="@+id/phone_ram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="@dimen/text_view_small_size"
                tools:text="3GB RAM" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>